<style>
    .content-wrapper {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        max-width: var(--max-page-width);
        margin-inline: auto;
    }

    .grid {
        display: grid;
        grid-template: repeat(2, 1fr) / repeat(3, 1fr);
    }

    @media (max-width: 985px) {
        /* Number obtained by manually testing */
        .grid {
            grid-template-columns: 1fr 1fr;
        }
    }

    @media (max-width: 680px) {
        /* Number obtained by manually testing */
        .grid {
            grid-template-columns: 1fr;
        }
    }

    .cell {
        padding: 20px;
        background-color: var(--bg-color);
        box-shadow: 0 0 0 1px #636569; /* box-shadow is used to achieve a border-collapse effect within the grid */
    }

    .primary {
        background-color: #1a1a1a;
    }
</style>

<div class="content-wrapper">
    <div class="grid">
        <div class="cell primary">
            <h2>Matrix Conference 2024</h2>
            <p>in numbers</p>
        </div>
        <div class="cell">
            <h2>52</h2>
            <p>workplaces building on Matrix</p>
        </div>
        <div class="cell">
            <h2>236</h2>
            <p>attendees</p>
        </div>
        <div class="cell">
            <h2>12</h2>
            <p>countries represented</p>
        </div>
        <div class="cell">
            <h2>79</h2>
            <p>large organisations attending</p>
        </div>
        <div class="cell">
            <h2>20K+</h2>
            <p>talks watched on-demand</p>
        </div>
    </div>
</div>
