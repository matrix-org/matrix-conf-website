<style>
    .content-wrapper {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        max-width: var(--max-page-width);
        margin-inline: auto;
    }

    h2 {
        color: var(--secondary-color);
        font-size: 0.875rem;
        text-transform: uppercase;
    }

    .sponsors-grid {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr;
        border: 1px solid #636569;
        gap: 1px;
    }

    .sponsors-grid > a {
        display: grid;
        padding: 20px;
        gap: 4px;
        box-shadow: 0 0 0 1px #636569; /* box-shadow is used to achieve a border-collapse effect within the grid */
        font-size: 1.125rem;

        &:hover {
            text-decoration: none;
        }
    }

    #element {
        gap: 20px;
        background-color: #1a1a1a;
        grid-column: 1 / span 3;
    }

    #ercom {
        grid-column: 1 / span 2;
    }

    #futurewei {
        grid-column: 3 / span 2;
    }

    @media (max-width: 625px) {
        /* Number obtained by manually testing */
        .sponsors-grid {
            grid-template-columns: 1fr;
        }

        #element,
        #ercom,
        #futurewei {
            grid-column: 1 / span 1;
        }
    }

    #element .description .main-sentence {
        font-weight: 700;
        margin-block-end: 0.5rem;
    }

    .champion .description p {
        font-size: 0.9rem;
    }

    .sustaining {
        place-content: center;

        img {
            max-height: 33px;
        }
    }
    #become-sponsor {
        font-weight: 700;
        place-content: center;
        background-image: url("/grey-repeating-lines.svg");
        padding-inline: 10px;
    }

    .inner-line img {
        display: inline-block;
        margin-inline-start: 0.1rem;
    }
</style>
