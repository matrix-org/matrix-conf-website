---
import SponsorsGrid from "../components/SponsorsGrid.astro";
import Rooms from "../components/Rooms.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<style>
    :root {
        --bg-color: #000000;
        --fg-color: #ffffff;
        --max-page-width: 960px;
        --link-color: #0999ff;
        --purple: #ae7fe9;
        --blue: #75f4f4;
        --green: #a6ffa1;
        --yellow: #f6ae2d;
        --red: #f45b69;
        --gradient: linear-gradient(
            340deg,
            var(--red) 3%,
            var(--yellow) 25%,
            var(--green) 48%,
            var(--blue) 70%,
            var(--purple) 93%
        );
        --text-primary: #fff;
        --text-secondary: #b8b8b8;
        --bg-primary: #000;
        --bg-card: #1a1a1a;
        --border: #3c3f44;
        --border-interactive: #636569;
        --link-text: #0999ff;
        font-family:
            -apple-system,
            BlinkMacSystemFont,
            avenir next,
            avenir,
            segoe ui,
            helvetica neue,
            Adwaita Sans,
            Cantarell,
            Ubuntu,
            roboto,
            noto,
            helvetica,
            arial,
            sans-serif;
    }
    body {
        background-color: var(--bg-color);
        color: var(--fg-color);
        min-height: 100dvh;
        display: grid;
        grid-template-rows: auto 1fr auto;
        grid-template-columns: 100%;
        margin: 0;
    }
    section {
        padding: clamp(2.5rem, 10vw, 5rem) 1.5rem;
    }
    section#stream-list {
        padding-top: 0px;
    }
    .content-wrapper {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        max-width: var(--max-page-width);
        margin-inline: auto;
    }
    #hero {
        background-image: url(/grey-repeating-lines.svg);
        height: 100px;
    }
    h1 {
        font-size: 2.5rem;
        line-height: 120%;
        text-align: center;
    }
    h2 {
        font-size: 2rem;
        color: var(--fg-color);
        font-size: 2rem;
        line-height: 120%;
    }
    a {
        color: var(--link-color);
        text-decoration: none;
    }
    .stream-item {
        display: flex;
        flex-direction: column;
        gap: 24px;
    }
    .stream-detail h2 {
        margin-bottom: 8px;
    }
    .ccc-player {
        width: 100%;
        aspect-ratio: 16/9;
    }
</style>

<BaseLayout
    pageTitle="Watch the Conference Live "
    description="Follow along the Matrix Conference even if you couldn't make it to Strasbourg"
>
    <section id="hero">
        <div class="content-wrapper">
            <h1>Livestreams</h1>
        </div>
    </section>

    <section id="discussion">
        <Rooms />
    </section>

    <section id="stream-list">
        <div class="content-wrapper">
            <div class="stream-item">
                <div class="stream-detail">
                    <h2>Ada Byron room talks</h2>
                    <a href="https://matrix.to/#/%23ada-mc25%3Amatrix.org"
                        >Online Q&A and chat - #ada-mc25:matrix.org</a
                    >
                </div>
                <iframe
                    class="ccc-player"
                    src="https://streaming.media.ccc.de/matrix-conf-2025/embed/byron/hls/native"
                    title="video player"
                    frameborder="none"
                    allowfullscreen="allowfullscreen"
                    seamless="seamless"
                    scrolling="no"></iframe>
            </div>

            <div class="stream-item">
                <div class="stream-detail">
                    <h2>Alan Turing room talks</h2>
                    <a href="https://matrix.to/#/%23alan-mc25%3Amatrix.org"
                        >Online Q&A and chat - #alan-mc25:matrix.org</a
                    >
                </div>
                <iframe
                    class="ccc-player"
                    src="https://streaming.media.ccc.de/matrix-conf-2025/embed/turing/hls/native"
                    title="video player"
                    frameborder="none"
                    allowfullscreen="allowfullscreen"
                    seamless="seamless"
                    scrolling="no"></iframe>
            </div>

            <!--
            <div class="stream-item">
                <div class="stream-detail">
                    <h2>Lynn Conway room talks</h2>
                    <a href="https://matrix.to/#/%23lynn-mc25%3Amatrix.org"
                        >Online Q&A and chat - #lynn-mc25:matrix.org</a
                    >
                </div>
                <iframe
                    class="ccc-player"
                    src="https://streaming.media.ccc.de/matrix-conf-2025/embed/conway/hls/native"
                    title="video player"
                    frameborder="none"
                    allowfullscreen="allowfullscreen"
                    seamless="seamless"
                    scrolling="no"></iframe>
            </div>
            -->
        </div>
    </section>

    <section id="Recordings">
        <div class="content-wrapper">
            <h2>Watch the recordings</h2>
            <div>
                on <a href="https://media.ccc.de/c/matrix-conf-2025"
                    >media.ccc.de</a
                > or <a
                    href="https://www.youtube.com/playlist?list=PLl5dnxRMP1hUgnYEbpEsEEhIqY_KlO3NG"
                >YouTube</a>.
            </div>
        </div>
    </section>

    <section id="sponsors">
        <SponsorsGrid />
    </section>
</BaseLayout>
